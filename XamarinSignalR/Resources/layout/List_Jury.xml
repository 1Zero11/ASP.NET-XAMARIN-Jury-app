<?xml version="1.0" encoding="utf-8" ?> 

    <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:p4="http://xamarin.com/mono/android/designer"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <EditText
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NumTable"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:hint="Номер Таблицы"/>
        <EditText
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CountOfJury"
            android:layout_below="@id/NumTable"
            android:layout_centerHorizontal="true"
            android:hint="Количество жюри"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ввести количество жюри"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/CountOfJury"
            android:id="@+id/btnAddCountOfJury">
        </Button>
        <EditText
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FIO_Jury"
            android:layout_below="@id/btnAddCountOfJury"
            android:layout_centerHorizontal="true"
            android:hint="ФИО жюри"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить ФИО жюри"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/FIO_Jury"
            android:id="@+id/btnAddFIO_Jury"
            android:enabled="false">
        </Button>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить информацию на сервер"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnAddFIO_Jury"
            android:id="@+id/btnSendJuryToServer">
        </Button>

        <ListView
            android:id="@+id/listViewJury"
            android:layout_below="@id/btnSendJuryToServer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
   

    </RelativeLayout>
